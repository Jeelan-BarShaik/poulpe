<beans xmlns="http://www.springframework.org/schema/beans" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


  <bean id="entityValidator" class="org.jtalks.common.validation.Jsr303EntityValidator">
    <property name="validator" ref="validator" />
  </bean>


  <!-- JSR-303 validation -->
  
  <bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean">
    <property name="constraintValidatorFactory" ref="validatorFactory" />
  </bean>

  <bean id="validatorFactory" class="org.jtalks.common.validation.config.PredefinedConstraintValidationFactory">
    <property name="validators">
      <list>
        <ref bean="uniqueConstraintValidator" />
      </list>
    </property>
  </bean>

  <bean id="uniqueConstraintValidator" class="org.jtalks.common.validation.unique.UniqueConstraintValidator">
    <property name="uniquenessViolatorsRetriever" ref="uniquenessViolatorsRetriever" />
  </bean>

  <bean id="uniquenessViolatorsRetriever" class="org.jtalks.common.validation.unique.UniquenessViolatorsRetriever">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>

</beans>