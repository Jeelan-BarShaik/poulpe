<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.jtalks.poulpe.model.entity.PoulpeSection" table="SECTIONS">
    <cache usage="nonstrict-read-write"/>
    <id column="SECTION_ID" name="id" unsaved-value="0">
      <generator class="native"/>
    </id>
    <property column="UUID" name="uuid" not-null="true"/>
    <property column="NAME" name="name" not-null="true"/>
    <property column="DESCRIPTION" name="description"/>

    <list name="branches" cascade="all">
      <cache usage="nonstrict-read-write"/>
      <key column="SECTION_ID" foreign-key="FK_SECTION"/>
      <list-index column="POSITION"/>
      <one-to-many class="org.jtalks.poulpe.model.entity.PoulpeBranch"/>
    </list>

  </class>

</hibernate-mapping>
