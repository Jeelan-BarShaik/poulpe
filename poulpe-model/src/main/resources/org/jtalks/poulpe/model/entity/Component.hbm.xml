<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.jtalks.poulpe.model.entity">
  <class name="Component" table="COMPONENT">
    <id column="CMP_ID" name="id" unsaved-value="0">
      <generator class="native" />
    </id>
    <discriminator column="COMPONENT_TYPE" />
    
    <property column="UUID" name="uuid" not-null="true" unique="true" />
    <property column="NAME" name="name" not-null="true" unique="true" />
    <property column="DESCRIPTION" name="description" />
    
    <property name="componentType" column="C_TYPE" unique="true">
      <type name="org.hibernate.type.EnumType">
        <param name="enumClass">org.jtalks.poulpe.model.entity.ComponentType</param>
      </type>
    </property>
    
    <subclass name="Jcommune" discriminator-value="JCOMMUNE">
      <bag name="sections" cascade="all-delete-orphan" inverse="false" lazy="false">
        <cache usage="nonstrict-read-write" />
        <key column="JCOMMUNE_ID" foreign-key="FK_JCOMMUNE" />
        <one-to-many class="Section" />
      </bag>
    </subclass>
  </class>
</hibernate-mapping>
