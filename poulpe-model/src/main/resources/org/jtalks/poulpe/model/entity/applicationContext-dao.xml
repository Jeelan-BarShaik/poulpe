<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/aop
    http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

  <bean id="exceptionTranslationInterceptor"
        class="org.springframework.dao.support.PersistenceExceptionTranslationInterceptor"/>

  <!-- Declaration of AOP Config -->
  <aop:config>
    <aop:advisor advice-ref="exceptionTranslationInterceptor"
                 pointcut="execution(* org.jtalks.common.model.dao.ParentRepository+.* (*))"/>
  </aop:config>

  <!-- Declaration of DAO beans -->
  <bean id="branchDao" class="org.jtalks.poulpe.model.dao.hibernate.BranchHibernateDao" parent="abstractHibernateDao"/>
  <bean id="componentDao" class="org.jtalks.poulpe.model.dao.hibernate.ComponentHibernateDao"
        parent="abstractHibernateDao"/>
  <bean id="topicTypeDao" class="org.jtalks.poulpe.model.dao.hibernate.TopicTypeHibernateDao"
        parent="abstractHibernateDao"/>
  <bean id="sectionDao" class="org.jtalks.poulpe.model.dao.hibernate.SectionHibernateDao"
        parent="abstractHibernateDao"/>
  <bean id="userDao" class="org.jtalks.poulpe.model.dao.hibernate.UserHibernateDao" parent="abstractHibernateDao"/>
  <bean id="groupDao" class="org.jtalks.poulpe.model.dao.hibernate.GroupHibernateDao" parent="abstractHibernateDao"/>

  <!--Injecting sessionFactory bean to class AbstractHibernateDao, this way resolves a problem of multiple DAO beans definition -->
  <bean id="abstractHibernateDao" abstract="true">
    <property name="sessionFactory" ref="sessionFactory"/>
  </bean>

  <!--Declaration and setting up datasource, sessionFactory and transactionalManager beans -->
  <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    <property name="driverClassName" value="${jdbc.driverClassName}"/>
    <property name="url" value="${JTALKS_DB_URL:jdbc:mysql://localhost/p_poulpe?characterEncoding=UTF-8}"/>
    <property name="username" value="${JTALKS_DB_USER:root}"/>
    <property name="password" value="${JTALKS_DB_PASSWORD:root}"/>
  </bean>
  <bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean"
        depends-on="flyway_poulpe">
    <property name="dataSource" ref="dataSource"/>
    <property name="mappingResources">
      <list>
        <value>/org/jtalks/poulpe/model/entity/Branch.hbm.xml</value>
        <value>/org/jtalks/poulpe/model/entity/BaseComponent.hbm.xml</value>
        <value>/org/jtalks/poulpe/model/entity/Component.hbm.xml</value>
        <value>/org/jtalks/poulpe/model/entity/TopicType.hbm.xml</value>
        <value>/org/jtalks/poulpe/model/entity/Section.hbm.xml</value>
        <value>/org/jtalks/poulpe/model/entity/Group.hbm.xml</value>
        <value>/org/jtalks/poulpe/model/entity/User.hbm.xml</value>
        <value>/org/jtalks/poulpe/model/entity/Property.hbm.xml</value>
        <value>/org/jtalks/poulpe/model/entity/DefaultProperty.hbm.xml</value>
      </list>
    </property>
    <property name="hibernateProperties">
      <props>
        <prop key="hibernate.query.factory_class">org.hibernate.hql.ast.ASTQueryTranslatorFactory</prop>
        <prop key="hibernate.dialect">${hibernate.dialect}</prop>
        <prop key="hibernate.hbm2ddl.auto">${hibernate.hbm2ddl.auto}</prop>
        <prop key="hibernate.show_sql">${hibernate.show_sql}</prop>
        <prop key="hibernate.use_sql_comments">${hibernate.show_sql}</prop>
        <prop key="hibernate.connection.charset">${encoding}</prop>
        <prop key="hibernate.connection.provider_class">${hibernate.connection.provider_class}</prop>
        <prop key="hibernate.connection.release_mode">auto</prop>
        <prop key="hibernate.cache.use_query_cache">${hibernate.use_query_cache}</prop>
        <prop key="current_session_context_class">thread</prop>
        <prop key="hibernate.cache.use_second_level_cache">${JTALKS_USE_SECOND_LEVEL_CACHE:true}</prop>
        <prop key="hibernate.cache.region.factory_class">
          ${JTALKS_CACHE_FACTORY:net.sf.ehcache.hibernate.SingletonEhCacheRegionFactory}
        </prop>
        <prop key="hibernate.generate_statistics">${hibernate.generate_statistics}</prop>
        <prop key="net.sf.ehcache.configurationResourceName">/org/jtalks/poulpe/model/entity/ehcache.xml</prop>
      </props>
    </property>
  </bean>

  <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
    <property name="sessionFactory" ref="sessionFactory"/>
    <property name="dataSource" ref="dataSource"/>
  </bean>

  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="location" value="classpath:/datasource.properties"/>
  </bean>

  <!-- Migrations, todo: 4 beans - that's weird, Ticket has been left for common to move init to one method -->

  <!--description of what those migration mean and how they work are in the package with SQL files-->
  <bean id="flyway_common_init" class="org.jtalks.common.util.FlywayWrapper" init-method="smartInit">
    <property name="dataSource" ref="dataSource"/>
    <property name="basePackage" value="org.jtalks.common.migrations"/>
    <property name="baseDir" value="/org/jtalks/common/migrations"/>
    <property name="table" value="common_schema_version"/>
    <property name="enabled" value="${migrations_enabled}"/>
  </bean>
  <bean id="flyway_common" class="org.jtalks.common.util.FlywayWrapper" init-method="migrate"
        depends-on="flyway_common_init">
    <property name="dataSource" ref="dataSource"/>
    <property name="basePackage" value="org.jtalks.common.migrations"/>
    <property name="baseDir" value="/org/jtalks/common/migrations"/>
    <property name="table" value="common_schema_version"/>
    <property name="enabled" value="${migrations_enabled}"/>
  </bean>
  <bean id="flyway_poulpe_init" class="org.jtalks.common.util.FlywayWrapper" init-method="smartInit"
        depends-on="flyway_common">
    <property name="dataSource" ref="dataSource"/>
    <property name="table" value="poulpe_schema_version"/>
    <property name="enabled" value="${migrations_enabled}"/>
  </bean>
  <bean id="flyway_poulpe" class="org.jtalks.common.util.FlywayWrapper" init-method="migrate"
        depends-on="flyway_poulpe_init">
    <property name="dataSource" ref="dataSource"/>
    <property name="basePackage" value="org.jtalks.poulpe.migrations"/>
    <property name="baseDir" value="/org/jtalks/poulpe/migrations"/>
    <property name="table" value="poulpe_schema_version"/>
    <property name="enabled" value="${migrations_enabled}"/>
  </bean>
</beans>
