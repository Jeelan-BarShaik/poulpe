<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:aop="http://www.springframework.org/schema/aop"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

  <bean id="exceptionTranslationInterceptor" class="org.springframework.dao.support.PersistenceExceptionTranslationInterceptor" />

  <!--Declaration of AOP Config -->
  <aop:config>
    <aop:advisor advice-ref="exceptionTranslationInterceptor" pointcut="execution(* org.jtalks.common.model.dao.ParentRepository+.* (*))" />
  </aop:config>

  <!--Declaration of DAO beans -->
  <bean id="branchDao" class="org.jtalks.poulpe.model.dao.hibernate.BranchHibernateDao" parent="abstractHibernateDao" />
  <bean id="componentDao" class="org.jtalks.poulpe.model.dao.hibernate.ComponentHibernateDao" parent="abstractHibernateDao" />
  <bean id="topicTypeDao" class="org.jtalks.poulpe.model.dao.hibernate.TopicTypeHibernateDao" parent="abstractHibernateDao" />
  <bean id="sectionDao" class="org.jtalks.poulpe.model.dao.hibernate.SectionHibernateDao" parent="abstractHibernateDao" />
  <bean id="userDao" class="org.jtalks.common.model.dao.hibernate.UserHibernateDao" parent="abstractHibernateDao" />
  <bean id="groupDao" class="org.jtalks.poulpe.model.dao.hibernate.GroupHibernateDao" parent="abstractHibernateDao" />
  <bean id="rankDao" class="org.jtalks.poulpe.model.dao.hibernate.RankHibernateDao" parent="abstractHibernateDao" />
  <bean id="jcommuneDao" class="org.jtalks.poulpe.model.dao.hibernate.JcommuneHibernateDao" parent="abstractHibernateDao" />
  
  <!--Injecting sessionFactory bean to class AbstractHibernateDao, this way resolves a problem of multiple DAO beans definition -->
  <bean id="abstractHibernateDao" abstract="true">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>

  <bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean" />

  <!-- Will be autowired to UniqueConstraintValidator -->
  <bean id="uniquenessViolatorsRetriever" class="org.jtalks.poulpe.model.dao.hibernate.constraints.UniquenessViolatorsRetriever">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>

  <!--Declaration and setting up datasource, sessionFactory and transactionalManager beans -->
  <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    <property name="driverClassName" value="${jdbc.driverClassName}" />
    <property name="url" value="${jdbc.url}" />
    <property name="username" value="${jdbc.username:root}" />
    <property name="password" value="${jdbc.password:root}" />
  </bean>
  <bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
    <property name="dataSource" ref="dataSource" />
    <property name="mappingResources">
      <list>
        <value>/org/jtalks/poulpe/model/entity/Branch.hbm.xml</value>
        <value>/org/jtalks/poulpe/model/entity/Component.hbm.xml</value>
        <value>/org/jtalks/poulpe/model/entity/TopicType.hbm.xml</value>
        <value>/org/jtalks/poulpe/model/entity/Section.hbm.xml</value>
        <value>/org/jtalks/poulpe/model/entity/Group.hbm.xml</value>
        <value>/org/jtalks/poulpe/model/entity/Rank.hbm.xml</value>
        <value>/org/jtalks/poulpe/model/entity/Jcommune.hbm.xml</value>
        <value>/org/jtalks/common/model/entity/User.hbm.xml</value>
      </list>
    </property>
    <property name="hibernateProperties">
      <props>
        <prop key="hibernate.query.factory_class">org.hibernate.hql.ast.ASTQueryTranslatorFactory</prop>
        <prop key="hibernate.dialect">${hibernate.dialect}</prop>
        <prop key="hibernate.hbm2ddl.auto">${hibernate.hbm2ddl.auto}</prop>
        <prop key="hibernate.show_sql">${hibernate.show_sql}</prop>
        <prop key="hibernate.connection.charset">${encoding}</prop>
        <prop key="hibernate.connection.provider_class">${hibernate.connection.provider_class}</prop>
        <prop key="hibernate.connection.release_mode">auto</prop>
        <prop key="hibernate.cache.use_query_cache">${hibernate.use_query_cache}</prop>
        <prop key="hibernate.cache.use_second_level_cache">${hibernate.use_second_level_cache}</prop>
      </props>
    </property>
  </bean>
  
  <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>
  
  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="location" value="classpath:/org/jtalks/poulpe/model/datasource.properties" />
  </bean>
</beans>
